---
import { Image } from "astro:assets"
import Button from "./Button"
import Logo from "/public/logo-black.svg"
import Hamburger from "./Hamburger"
---
<header class="fixed top-0 left-0 right-0 z-20 mx-auto max-w-screen-xl bg-white container py-6 px-6 sm:px-10 lg:px-16 flex items-center justify-between">
    <div class="cursor-pointer w-48 sm:size-fit">
        <Image src={Logo} alt="Positivus"/>
    </div>
    <nav class="hidden lg:flex items-center gap-8 ">
        <ul class="font-normal text-lg flex gap-5 xl:gap-8 cursor-pointer">
            <li class="hover:motion-preset-shake">About us</li>
            <li class="hover:motion-preset-shake">Services</li>
            <li class="hover:motion-preset-shake">Use Cases</li>
            <li class="hover:motion-preset-shake">Pricing</li>
            <li class="hover:motion-preset-shake">Blog</li>
        </ul>
        <Button variant="outline">
            Request a quote
        </Button>
    </nav>
    <Hamburger client:visible/>     
</header>